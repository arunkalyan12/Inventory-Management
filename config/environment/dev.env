# =========================
# General Project Settings
# =========================
PROJECT_NAME=inventory-management-system
ENV=dev
LOG_LEVEL=DEBUG

# =========================
# MongoDB (Inventory Service & Auth Service using same DB)
# =========================
DB_HOST=localhost
DB_PORT=27017
DB_NAME=inventory_db
DB_USER=admin
DB_PASS=password123

# =========================
# Authentication Service
# =========================
AUTH_API_HOST=0.0.0.0
AUTH_API_PORT=8003            # Port for auth API

JWT_SECRET=your_jwt_secret    # Secret used for JWT token generation

# =========================
# Computer Vision Service
# =========================
CV_API_HOST=0.0.0.0
CV_API_PORT=8000
MODEL_PATH=/app/model/model_weights.pt
TRAIN_DATA_PATH=/app/data/train
VALID_DATA_PATH=/app/data/valid

# =========================
# Inventory Management Service
# =========================
IM_API_HOST=0.0.0.0
IM_API_PORT=8001

MONGO_CONFIG=./config/database/mongo_config.yml

LOG_LEVEL=INFO
LOG_FILE_PATH=logs/inventory.log
CV_API_URL=http://localhost:8000/predict

EVENT_QUEUE_HOST=localhost
EVENT_QUEUE_PORT=5672
EVENT_QUEUE_NAME=inventory_events

# =========================
# Notification Service
# =========================
NOTIF_API_HOST=0.0.0.0
NOTIF_API_PORT=8002
EMAIL_SMTP_SERVER=smtp.mailtrap.io
EMAIL_SMTP_PORT=587
EMAIL_USER=devuser
EMAIL_PASS=devpass
SMS_API_KEY=dev_sms_key

# =========================
# Message Queue / Shared Utilities
# =========================
MQ_HOST=localhost
MQ_PORT=5672
MQ_USER=guest
MQ_PASS=guest

# =========================
# Monitoring & Tracing
# =========================
PROMETHEUS_HOST=localhost
PROMETHEUS_PORT=9090
OTEL_COLLECTOR_URL=http://localhost:4317
