# =========================
# General Project Settings
# =========================
PROJECT_NAME=inventory-management-system   # Name of the project
ENV=development                             # Environment (dev, test, prod)
LOG_LEVEL=DEBUG                             # Default logging level for all services

# =========================
# MongoDB (Inventory Service)
# =========================
DB_HOST=localhost                           # MongoDB host
DB_PORT=27017                               # MongoDB port
DB_NAME=inventory_db                        # Database name for inventory service
DB_USER=admin                               # DB username (dev)
DB_PASS=password123                          # DB password (dev)

# =========================
# Computer Vision Service
# =========================
CV_API_HOST=0.0.0.0                         # Host to bind CV API (0.0.0.0 = all interfaces)
CV_API_PORT=8000                             # Port CV API listens on
MODEL_PATH=/app/model/model_weights.pt      # Path to trained model inside Docker
TRAIN_DATA_PATH=/app/data/train             # Training dataset path inside Docker
VALID_DATA_PATH=/app/data/valid             # Validation dataset path inside Docker

# =========================
# Inventory Management Service
# =========================
IM_API_HOST=0.0.0.0                          # Host to bind inventory API
IM_API_PORT=8001                              # Port inventory API listens on

# =========================
# Notification Service
# =========================
NOTIF_API_HOST=0.0.0.0                        # Host to bind notification API
NOTIF_API_PORT=8002                            # Port notification API listens on
EMAIL_SMTP_SERVER=smtp.mailtrap.io           # SMTP server for sending dev emails
EMAIL_SMTP_PORT=587                           # SMTP server port
EMAIL_USER=devuser                            # Email login username
EMAIL_PASS=devpass                            # Email login password
SMS_API_KEY=dev_sms_key                       # API key for sending SMS in dev

# =========================
# Message Queue / Shared Utilities
# =========================
MQ_HOST=localhost                             # RabbitMQ / Kafka host
MQ_PORT=5672                                  # MQ port
MQ_USER=guest                                 # MQ username
MQ_PASS=guest                                 # MQ password

# =========================
# Monitoring & Tracing
# =========================
PROMETHEUS_HOST=localhost                     # Prometheus server host
PROMETHEUS_PORT=9090                          # Prometheus port
OTEL_COLLECTOR_URL=http://localhost:4317     # OpenTelemetry collector URL
