# =========================
# General Project Settings
# =========================
PROJECT_NAME=inventory-management-system
ENV=dev
LOG_LEVEL=DEBUG

# =========================
# MongoDB
# =========================
DB_HOST=mongo
DB_PORT=27017
DB_NAME=inventory_db
DB_USER=admin
DB_PASS=password123

# =========================
# Unified Backend (Inventory + CV + API)
# =========================
API_HOST=0.0.0.0
API_PORT=8000

# Paths for CV model and data
MODEL_PATH=/app/model/model_weights.pt
TRAIN_DATA_PATH=/app/data/train
VALID_DATA_PATH=/app/data/valid

# Optional: logging
LOG_FILE_PATH=/app/logs/backend.log
LOG_LEVEL=INFO

# Event Queue (RabbitMQ) for inventory events
EVENT_QUEUE_HOST=rabbitmq
EVENT_QUEUE_PORT=5672
EVENT_QUEUE_NAME=inventory_events

# CV API URL (for internal use)
CV_API_URL=http://localhost:8000/predict  # since integrated into the same backend

# =========================
# Monitoring & Tracing
# =========================
PROMETHEUS_HOST=prometheus
PROMETHEUS_PORT=9090
OTEL_COLLECTOR_URL=http://otel-collector:4317
